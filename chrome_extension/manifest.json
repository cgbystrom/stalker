{
  "manifest_version": 2,

  "name": "Stalker",
  "description": "Tracer for server-side HTTP requests.",
  "version": "0.0.1",
  "icons": { "16": "images/icon16.png", "16": "images/icon16.png" },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": ["background-script.js"]
  }
}
